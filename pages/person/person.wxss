.main {
    padding-top: 20rpx;
}

.contact-info .item {
    color: #838383;
    padding-bottom: 10rpx;
    margin-bottom: 30rpx;
    border-bottom: 1px solid #f2f2f2;
}

.contact-info .item:last-child {
    margin-bottom: 0;
}

.contact-info .item .iconfont {
    margin-right: 40rpx;
    display: inline-block;
    vertical-align: middle;
}

.contact-info .item button {
    vertical-align: middle;
}

.website-item {
    position: relative;
}

.blog {
    margin-bottom: 20rpx;
}

.official-box {
    margin-bottom: 30rpx;
}

.person-website .text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    color: #fff;
}

.person-website image {
    border-radius: 5px;
}