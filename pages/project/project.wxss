.project-list {
    padding: 40rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.project-list .item {
    position: relative;
    width: 100%;
    height: 200rpx;
    margin-bottom: 4%;
    border-radius: 10px;
    overflow: hidden;
}

.project-list .item navigator {
    width: 100%;
    height: 100%;
}

.mallin {
    background: #614385;
    background: -webkit-linear-gradient(to right,#516395,#614385);
    background: linear-gradient(to right,#516395,#614385);
}

.mallCn {
    background: #134e5e;
    background: -webkit-linear-gradient(to right,#71b280,#134e5e);
    background: linear-gradient(to right,#71b280,#134e5e);
}

.project-info {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    color: #fff;
    font-weight: 700;
    text-align: center;
}